{
  "apiVersion": "cmf.confluent.io/v1",
  "kind": "ComputePool",
  "metadata": {
    "name": "pool"
  },
  "spec": {
    "type": "DEDICATED",
    "clusterSpec": {
      "flinkVersion": "v1_19",
      "image": "confluentinc/cp-flink-sql:1.19-cp1",
      "flinkConfiguration": {
        "pipeline.operator-chaining.enabled": "false",
        "execution.checkpointing.interval": "10s"
      },
      "taskManager": {
        "resource": {
          "cpu": 1,
          "memory": "1024m"
        }
      },
      "jobManager": {
        "resource": {
          "cpu": 1,
          "memory": "1024m"
        }
      },
      "podTemplate": {
        "spec": {
          "containers": [
            {
              "name": "flink-main-container",
              "volumeMounts": [
                {
                  "name": "tls-client",
                  "mountPath": "/mnt/certs"
                }
              ]
            }
          ],
          "volumes": [
            {
              "name": "tls-client",
              "secret": {
                "secretName": "tls-client"
              }
            }
          ]
        }
      }
    }
  }
}
